
@model eMarket.Models.ViewModel.NewProductVM

@{
    ViewData["Title"] = "Add a new product";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <center>
            <p>
                <h2>Add a new product</h2>
            </p>

        </center>
        <div class="row">
            <div class="col-md-8 offset-2 bg-light">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Model" class="control-label"></label>
                                <input asp-for="Model" class="form-control border border-dark"  />
                                <span asp-validation-for="Model" class="text-danger "></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BrandName" class="control-label"></label>
                                <input asp-for="BrandName"  class="form-control border border-dark" />
                                <span asp-validation-for="BrandName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Capacity" class="control-label"></label>
                                <input asp-for="Capacity" te" class="form-control border border-dark" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control border border-dark" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" class="form-control border border-dark" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        
                            
                            <div class="form-group">
                                <label asp-for="DealerIds" class="control-label"></label>
                                <select asp-for="DealerIds" class="form-control border border-dark" asp-items="ViewBag.Dealers" multiple></select>
                                <span asp-validation-for="DealerIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control border border-dark"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                
                  
                      </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}