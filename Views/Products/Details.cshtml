@model Product

@{
    ViewData["Title"] = "products";
}

<div class="row">
    <div class="col-md-8 offset-2 bg-light">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-primary">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Model
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageURL" width="100%" alt="@Model.Model">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">@Model.Capacity</p>
                        <p class="card-text">@Model.Price</p>
                        <p class="card-text">

                        <p class="card-text">
                            <b>Dealers: </b>
                            <hr />
                            <div class="row">
                                @foreach (var dealer in Model.Dealers_Products)
                                {
                                    <div class="column text-center">
                                        <img class="border-info rounded-circle" src="@dealer.Dealer.ProfilePictureURL" style="max-width: 150px" />
                                        <br />
                                        <a asp-controller="Dealers" asp-action="Details" asp-route-id="@dealer.DealerId">@dealer.Dealer.FullName</a>
                                        <a asp-controller="Dealers" asp-action="Details" asp-route-id="@dealer.DealerId">@dealer.Dealer.Area</a>
                                    </div>
                                }
                            </div>
                        </p>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                            <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c"))</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>